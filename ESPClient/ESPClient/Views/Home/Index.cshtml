@{
    ViewData["Title"] = "ESP-8266 Alarm System";
}

@model ESPClient.Models.Microcontroller

    <section class="u-clearfix u-section-1" id="sec-38b5">
      <div class="u-clearfix u-sheet u-sheet-1">
        <h1 class="u-align-center u-text u-text-default u-text-1">Welcome to the ESP-8266 alarm system! </h1>
        <p class="u-align-center u-large-text u-text u-text-default u-text-variant u-text-2"> You can change the microcontroller settings or monitor the current configurations of system sensors and active cameras in the panels below.</p>
      </div>
    </section>
    <section class="u-clearfix u-section-2" id="sec-8e0d">
      <div class="u-clearfix u-sheet u-sheet-1">
        <div class="u-clearfix u-expanded-width u-layout-wrap u-layout-wrap-1">
          <div class="u-layout">
            <div class="u-layout-row">
              <div class="u-align-center u-container-style u-layout-cell u-size-30 u-layout-cell-1">
                <div class="u-container-layout u-container-layout-1">
                  <h2 class="u-align-center u-subtitle u-text u-text-default u-text-1"><span class="u-file-icon u-icon u-icon-1"><img src="images/2752878.png" alt=""></span>&nbsp;Microcontroller subsystem
                  </h2>
                  <div class="u-border-3 u-border-grey-dark-1 u-line u-line-horizontal u-line-1"></div>
                  <p class="u-align-center u-large-text u-text u-text-default u-text-variant u-text-2">Input sensors status:</p>
                  <div class="u-expanded-width u-table u-table-responsive u-table-1">
                    <table class="u-table-entity">
                      <colgroup>
                        <col width="50%">
                        <col width="50%">
                      </colgroup>
                      <tbody class="u-table-body u-table-body-1">
                        <tr style="height: 46px;">
                          <td class="u-table-cell u-table-cell-1">Light sensor:</td>
                          <td class="u-table-cell u-table-cell-2">
                                @if (Model.IPAddress == null)
                                {
                                    <p class="u-table-cell u-table-cell-4">Unknown</p>
                                }
                                else if (Model.LightSensor)
                                {
                                    <p class="u-table-cell u-table-cell-4">ON</p>
                                }
                                else
                                {
                                    <p class="u-table-cell u-table-cell-4">OFF</p>
                                }
                          </td>
                        </tr>
                        <tr style="height: 46px;">
                          <td class="u-table-cell">Movement sensor:</td>
                          <td class="u-table-cell u-table-cell-4">
                              @if (Model.IPAddress == null)
                              {
                                    <p class="u-table-cell u-table-cell-4">Unknown</p>
                              }
                              else if (Model.MovementSensor)
                              {
                                    <p class="u-table-cell u-table-cell-4">ON</p>
                              }
                              else
                              {
                                    <p class="u-table-cell u-table-cell-4">OFF</p>
                              }
                          </td>
                        </tr>
                        <tr style="height: 46px;">
                          <td class="u-table-cell">Sound sensor:</td>
                          <td class="u-table-cell u-table-cell-6">
                                @if (Model.IPAddress == null)
                                {
                                    <p class="u-table-cell u-table-cell-4">Unknown</p>
                                }
                                else
                                {
                                    <p class="u-table-cell u-table-cell-4">@Model.SoundSensor</p>
                                }
                          </td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                  <div class="u-border-3 u-border-grey-dark-1 u-line u-line-horizontal u-line-2"></div>
                  <p class="u-align-center u-large-text u-text u-text-default u-text-variant u-text-3">LED ring strip status:</p>
                @if (Model.IPAddress == null)
                {
                    <p class="u-align-center u-text u-text-default u-text-4">
                        Unknown
                        <span style="font-weight: 700;"></span>
                    </p>
                    <div class="u-border-2 u-border-grey-75 u-radius-20 u-shape u-shape-round u-shape-1" style="background-color: white"></div>
                }
                else if (Model.LEDRingStrip == System.Drawing.Color.Green)
                {
                    <p class="u-align-center u-text u-text-default u-text-4">
                        Green (Safe)
                        <span style="font-weight: 700;"></span>
                    </p>
                    <div class="u-border-2 u-border-grey-75 u-radius-20 u-shape u-shape-round u-shape-1" style="background-color: green"></div>
                }
                else if (Model.LEDRingStrip == System.Drawing.Color.Yellow)
                {
                    <p class="u-align-center u-text u-text-default u-text-4">
                        Yellow (Suspicious)
                        <span style="font-weight: 700;"></span>
                    </p>
                    <div class="u-border-2 u-border-grey-75 u-radius-20 u-shape u-shape-round u-shape-1" style="background-color: yellow"></div>
                }
                else
                {
                    <p class="u-align-center u-text u-text-default u-text-4">
                        Red (Alarm)
                        <span style="font-weight: 700;"></span>
                    </p>
                    <div class="u-border-2 u-border-grey-75 u-radius-20 u-shape u-shape-round u-shape-1" style="background-color: red"></div>
                }
                </div>
              </div>
              <div class="u-container-style u-layout-cell u-size-30 u-layout-cell-2">
                <div class="u-container-layout u-container-layout-2">
                  <h2 class="u-align-center u-subtitle u-text u-text-default u-text-5"><span class="u-file-icon u-icon u-icon-2"><img src="images/738853.png" alt=""></span>&nbsp;
                  Settings
                  </h2>
                  <div class="u-border-3 u-border-grey-dark-1 u-line u-line-horizontal u-line-3"></div>
                  <div class="u-align-center u-form u-form-1">
                    <form method="post" asp-controller="Home" asp-action="Connect" class="u-clearfix u-form-horizontal u-form-spacing-10 u-inner-form" source="email" name="form" style="padding: 10px;">
                        <div class="u-form-group u-label-top u-form-group-1">
                            <label for="name-06af" class="u-label u-label-1">IP address:</label>
                            <input id="name-06af" name="IPAddress" class="u-border-grey-75 u-input u-input-rectangle u-none u-radius-12 u-input-1" type="text">
                        </div>
                        <div class="u-align-right u-form-group u-form-submit u-label-top">
                            <button type="submit" class="u-btn u-btn-round u-button-style u-hover-palette-1-dark-1 u-palette-1-base u-radius-28 u-btn-1">CONNECT</button>
                        </div>
                    </form>
                  </div>
                  <div class="u-table u-table-responsive u-table-2">
                    <table class="u-table-entity">
                      <colgroup>
                        <col width="50%">
                        <col width="50%">
                      </colgroup>
                      <tbody class="u-table-body u-table-body-2">
                        <tr style="height: 31px;">
                          <td class="u-table-cell u-table-cell-7">Connection status:</td>
                          <td class="u-table-cell u-text-palette-2-base u-table-cell-8">
                            @if (Model.IPAddress == null)
                            {
                                <p style="text-color: red">Disconnected</p>
                            }
                            else
                            {
                                <p style="text-color: green">Connected</p>
                            }
                          </td>
                        </tr>
                        <tr style="height: 46px;">
                          <td class="u-table-cell">Active system mode:</td>
                          <td class="u-table-cell u-table-cell-10">
                            @if (Model.IPAddress == null)
                            {
                                <p>Unknown</p>
                            }
                            else
                            {
                                @Model.SystemMode
                            }
                          </td>
                        </tr>
                        <tr style="height: 46px;">
                          <td class="u-table-cell">Active system regime:</td>
                          <td class="u-table-cell u-table-cell-12">
                            @if (Model.IPAddress == null)
                            {
                                <p>Unknown</p>
                            }
                            else
                            {
                                @Model.SystemRegime
                            }
                          </td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                  <div class="u-border-3 u-border-grey-dark-1 u-line u-line-horizontal u-line-4"></div>
                  <div class="u-form u-form-2">
                    <form method="post" asp-controller="Home" asp-action="ModeRegime" class="u-clearfix u-form-spacing-10 u-form-vertical u-inner-form" source="email" name="form-1" style="padding: 10px;">
                      <div class="u-form-group u-form-radiobutton u-form-group-3">
                        <label class="u-label u-label-2">Change system mode:</label>
                        <div class="u-form-radio-button-wrapper">
                          <div class="u-input-row">
                            <input id="field-9818" type="radio" name="mode" value="day" class="u-field-input u-grey-25 u-radius-15" checked="checked" data-calc="day">
                            <label class="u-field-label" for="field-9818" style="font-size: 1.25rem; font-weight: 700;">Day mode</label>
                            <img src="images/3917805.png" alt="" height="30px" width="30px" style="margin-left: 1em">
                          </div>
                          <div class="u-input-row">
                            <input id="field-26e7" type="radio" name="mode" value="night" class="u-field-input u-grey-25 u-radius-15" data-calc="night">
                            <label class="u-field-label" for="field-26e7" style="font-size: 1.25rem; font-weight: 700;">Night mode</label>
                            <img src="images/3901848.png" alt="" height="30px" width="30px" style="margin-left: 1em">
                           </div>
                        </div>
                      </div>
                      <div class="u-form-group u-form-radiobutton u-form-group-4">
                        <label class="u-label u-label-3">Change system regime:</label>
                        <div class="u-form-radio-button-wrapper">
                          <div class="u-input-row">
                            <input id="field-cf8a" type="radio" name="regime" value="home" class="u-field-input u-grey-25 u-radius-15" checked="checked" data-calc="home">
                            <label class="u-field-label" for="field-cf8a" style="font-size: 1.25rem; font-weight: 700;">At home</label>
                            <img src="images/609803.png" alt="" height="30px" width="30px" style="margin-left: 1em">
                          </div>
                          <div class="u-input-row">
                            <input id="field-97a9" type="radio" name="regime" value="away" class="u-field-input u-grey-25 u-radius-15" data-calc="away">
                            <label class="u-field-label" for="field-97a9" style="font-size: 1.25rem; font-weight: 700;">Away</label>
                            <img src="images/3762131.png" alt="" height="30px" width="30px" style="margin-left: 1em">
                          </div>
                        </div>
                      </div>
                      <div class="u-align-center u-form-group u-form-submit" style="margin-bottom: 0.5em">
                        <button type="submit" class="u-btn u-btn-round u-button-style u-hover-palette-1-dark-1 u-palette-1-base u-radius-28 u-btn-2">CHANGE SETTINGS</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="u-clearfix u-section-3" id="sec-ef67" style="margin-top: 4em">
      <div class="u-clearfix u-sheet u-sheet-1">
        <div class="u-container-style u-expanded-width u-group u-shape-rectangle u-group-1">
          <div class="u-container-layout u-container-layout-1">
            <h2 class="u-align-center u-subtitle u-text u-text-default u-text-1"><span class="u-file-icon u-icon u-icon-1"><img src="images/2642651.png" alt=""></span>&nbsp;Mobile phone subsystem
            </h2>
            <div class="u-border-3 u-border-grey-dark-1 u-line u-line-horizontal u-line-1"></div>
            <div class="u-form u-form-1">
              <form action="https://forms.nicepagesrv.com/v2/form/process" class="u-clearfix u-form-horizontal u-form-spacing-10 u-inner-form" source="email" name="form-2" style="padding: 10px;">
                <div class="u-form-group u-form-partition-factor-2 u-form-select u-vertical-form-control-visible u-form-group-1">
